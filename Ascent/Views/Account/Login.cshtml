<body class="font-montserrat">

    <div class="auth">
        <div class="auth_left ">
            <div class="card">
                <div class="text-center mb-2">
                    <a class="header-brand" href="index-2.html"><img src="~/assets/img/Ascent Financial crest thicker letters-01.jpg" width="60" height="60" /></a>
                </div>
                <div class="card-body">
                    <div class="card-title">Login to your account</div>
                    <form asp-action="Login" asp-controller="Account" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">*@
                            <input type="email" asp-for="Email" required="" aria-describedby="emailHelp" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Password<a href="#" class="float-right small">I forgot password</a></label>
                            @*<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">*@
                            <input type="password" asp-for="Password" required="" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                @*<input type="checkbox" class="custom-control-input" />*@
                                <input class="custom-control-input" required="" asp-for="RememberMe" />
                                <span class="custom-control-label">Remember me</span>
                            </label>
                        </div>
                        @if (ViewBag.Error != null)
                        {
                            <span class="text-danger">@ViewBag.Error</span>
                        }
                        <div class="form-footer">
                            @*<a href="/Admin/Index" class="btn btn-primary btn-block" title="">Sign in</a>*@
                            @*<input type="submit" name="submit" class="btn btn-primary btn-block" value="Sign in" />*@
                            <button name="submit" class="btn btn-primary btn-block">Sign in</button>
                        </div>
                    </form>
                </div>
                <div class="text-center text-muted">
                    Don't have account yet? <a href="/Account/Index">Sign up</a>
                </div>
            </div>
        </div>
        <div class="auth_right full_img d-none d-lg-block" style="background-image:url(https://res.cloudinary.com/solvevare/image/upload/v1612330473/11_dqkslk.jpg);background-size:cover">

        </div>
    </div>

   
